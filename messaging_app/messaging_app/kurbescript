#!/bin/bash
# kurbeScript - Install Minikube & Kubernetes, Start Cluster, Verify Setup

set -e

# Function to check if a command exists
command_exists() {
    command -v "$1" >/dev/null 2>&1
}

echo "=== Checking system dependencies ==="

# Check for minikube
if ! command_exists minikube; then
    echo "Minikube not found. Installing..."
    curl -LO https://storage.googleapis.com/minikube/releases/latest/minikube-linux-amd64
    sudo install minikube-linux-amd64 /usr/local/bin/minikube
    rm minikube-linux-amd64
    echo "Minikube installed successfully."
else
    echo "Minikube already installed."
fi

# Check for kubectl
if ! command_exists kubectl; then
    echo "kubectl not found. Installing..."
    curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl"
    sudo install -o root -g root -m 0755 kubectl /usr/local/bin/kubectl
    rm kubectl
    echo "kubectl installed successfully."
else
    echo "kubectl already installed."
fi

echo "=== Starting Kubernetes cluster with Minikube ==="
minikube start

echo "=== Verifying cluster status ==="
kubectl cluster-info

echo "=== Checking nodes ==="
kubectl get nodes

echo "=== Retrieving available pods (all namespaces) ==="
kubectl get pods -A

echo "âœ… Kubernetes local cluster is up and running!"
